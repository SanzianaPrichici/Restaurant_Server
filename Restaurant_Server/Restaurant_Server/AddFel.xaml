<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant_Server.AddFel">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listaProduse" BackgroundColor="Aqua" ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Denumire}" Detail="{Binding ID}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView x:Name="listaProduseFel" BackgroundColor="Brown" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Denumire}" Detail="{Binding ID}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>